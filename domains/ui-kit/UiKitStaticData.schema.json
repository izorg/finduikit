{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "ai": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["LLMs.txt", "MCP"]
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": ["type", "url"],
      "additionalProperties": false
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "description": {
      "type": "string"
    },
    "figma": {
      "type": "string",
      "format": "uri"
    },
    "frameworks": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["Angular", "React", "Solid", "Svelte", "Vue"]
      }
    },
    "homepage": {
      "type": "string",
      "format": "uri"
    },
    "image": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "fit": {
              "type": "string",
              "enum": ["contain", "cover"]
            },
            "src": {
              "type": "string"
            }
          },
          "required": ["src"],
          "additionalProperties": false
        },
        {
          "type": "null"
        }
      ]
    },
    "name": {
      "type": "string"
    },
    "packages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "framework": {
            "type": "string",
            "enum": ["Angular", "React", "Solid", "Svelte", "Vue"]
          },
          "name": {
            "type": "string"
          }
        },
        "required": ["name"],
        "additionalProperties": false
      }
    },
    "repository": {
      "type": "string",
      "format": "uri"
    },
    "storybook": {
      "type": "string",
      "format": "uri"
    },
    "styling": {
      "type": "string",
      "enum": [
        "CSS",
        "Emotion",
        "Griffel",
        "Less",
        "Panda",
        "Sass",
        "styled-components",
        "Tailwind CSS",
        "vanilla-extract"
      ]
    },
    "unstyled": {
      "type": "boolean"
    },
    "webComponents": {
      "type": "string",
      "enum": ["FAST", "Lit", "Stencil"]
    }
  },
  "required": ["homepage", "name", "repository"],
  "additionalProperties": false
}
